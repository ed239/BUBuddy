          <Button onAction="#loginPageToChatPage" text="GO TO CHAT PAGE BUTTON" />
         <Button onAction="#loginPageToSignUpPage" text="GO TO SIGN UP PAGE BUTTON" />
      </VBox>
   </center>
   <top>
      <AnchorPane prefHeight="100.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <AnchorPane prefHeight="100.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <AnchorPane prefHeight="100.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <AnchorPane prefHeight="100.0" prefWidth="100.0" BorderPane.alignment="CENTER" />

      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: gray;">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <Label text="LOGIN PAGE" />
      
